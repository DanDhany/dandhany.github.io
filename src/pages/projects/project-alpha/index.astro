---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import ParallaxSection from "../../../components/ParallaxSection.astro";
---
<BaseLayout title="Project Alpha" description="Eksperimen UI interaktif">
  <ParallaxSection image="linear-gradient(135deg, #1f2a44 0%, #0b0c0f 70%, #25314a 100%)" height="60vh">
    <div class="container">
      <h1 class="hero-title">Project Alpha</h1>
      <p class="hero-subtitle">Eksperimen UI interaktif dengan animasi ringan.</p>
    </div>
  </ParallaxSection>
  <section class="section">
    <div class="container">
      <h2 class="title">Ringkasan</h2>
      <p class="subtitle">Ini versi dummy. Konten akan diisi kemudian atau dari CMS.</p>
    </div>
  </section>
</BaseLayout>